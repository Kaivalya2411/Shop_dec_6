<!DOCTYPE html>
<html>
  <head>
    <title>ShopDec6</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%#= javascript_importmap_tags %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://js.stripe.com/v3/"></script>
  </head>

  <body>
<!--  <h1> E-Comm </h1>-->
<!--  <p class="alert"><%#= alert %></p>-->

  <%# if user_signed_in? %>
    <%#= button_to "Logout", destroy_user_session_path, method: :delete %>
    <%#= render partial: "cart/cart" if @render_cart %>
  <%# else %>
    <%#= link_to "Register", new_user_registration_path %>
    <%#= link_to "Login", new_user_session_path %>
  <%# end %>
  <%#= yield %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 mx-auto text-center">
      <h1 class="display-4 text-primary mb-4">E-Comm</h1>

      <% if user_signed_in? %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger me-2" %>
        <%= render partial: "cart/cart" if @render_cart %>
      <% else %>
        <%= link_to "Register", new_user_registration_path, class: "btn btn-outline-primary me-2" %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>

  <%= yield %>
</div>



  </body>
</html>
