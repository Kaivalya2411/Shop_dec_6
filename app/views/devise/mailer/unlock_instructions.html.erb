    <div class="col-md-6 text-center">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title mb-4">Account Locked</h3>
          <p class="card-text">
            Hello <%= @resource.email %>! Your account has been locked due to an excessive number of unsuccessful sign-in attempts.
          </p>
          <p class="card-text">
            Click the link below to unlock your account:
          </p>
          <p class="mt-4">
            <%= link_to 'Unlock my account', unlock_url(@resource, unlock_token: @token), class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
