<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body text-center">
          <h4 class="card-title text-primary">Hello <%= @email %>!</h4>

          <% if @resource.try(:unconfirmed_email?) %>
            <p class="card-text">We're contacting you to notify you that your email is being changed to <%= @resource.unconfirmed_email %>.</p>
          <% else %>
            <p class="card-text">We're contacting you to notify you that your email has been changed to <%= @resource.email %>.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
